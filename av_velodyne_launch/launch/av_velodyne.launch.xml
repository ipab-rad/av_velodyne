<launch>
  <node pkg="av_velodyne_launch" exec="curl_engage.py" name="curl_engage" output="both"/>

  <arg name="ros_time" default="false" description="If false use GPS/PPS time synch"/>
  <let name="gps_time" value="true" unless="$(var ros_time)"/>
  <let name="gps_time" value="false" if="$(var ros_time)"/>

  <include file="$(find-pkg-share av_velodyne_launch)/launch/velodyne-all-nodes-VLP16-composed.launch.xml">
    <arg name="side" value="left"/>
    <arg name="gps_time" value="$(var gps_time)"/>
  </include>

  <include file="$(find-pkg-share av_velodyne_launch)/launch/velodyne-all-nodes-VLP16-composed.launch.xml">
    <arg name="side" value="right"/>
    <arg name="gps_time" value="$(var gps_time)"/>
  </include>
</launch>
